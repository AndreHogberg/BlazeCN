@namespace BlazeCN.UI

<AccordionRoot
    data-slot="accordion"
    @attributes="AdditionalAttributes"
    Type="Type"
    Value="Value"
    Values="Values"
    DefaultValue="DefaultValue"
    DefaultValues="DefaultValues"
    Orientation="Orientation"
    Loop="Loop"
    Disabled="Disabled"
    Collapsible="Collapsible"
    ValueChanged="ValueChanged"
    ValuesChanged="ValuesChanged">
    @ChildContent
</AccordionRoot>

@code {
    [Parameter(CaptureUnmatchedValues = true)] public IDictionary<string, object>? AdditionalAttributes { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public AccordionType Type { get; set; } = AccordionType.Single;
    [Parameter] public string? Value { get; set; }
    [Parameter] public IReadOnlyList<string>? Values { get; set; }
    [Parameter] public string? DefaultValue { get; set; }
    [Parameter] public IReadOnlyList<string>? DefaultValues { get; set; }
    [Parameter] public AccordionOrientation Orientation { get; set; } = AccordionOrientation.Vertical;
    [Parameter] public bool Loop { get; set; } = true;
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool Collapsible { get; set; } = true;
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public EventCallback<IReadOnlyList<string>> ValuesChanged { get; set; }
}
